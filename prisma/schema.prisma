generator client {
  provider = "prisma-client-js"
  output = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id String @id @default(uuid())
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title String
  isbn13 String
  authors Author[]
  longTitle String?
  description String?
  synopsis String?
  publicationDate String?
  images Image[]

  @@index([title])
}

model Author {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  akas String[]
  books Book[]
}

model Image {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  url String
  width Int
  height Int
  books Book[]
}
