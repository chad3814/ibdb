generator client {
  provider = "prisma-client-js"
  output = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Binding {
  Unknown
  Paperback
  Hardcover
  Ebook
  Audiobook
}

model Book {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title String
  isbn13 String
  authors Author[]
  longTitle String?
  synopsis String?
  publicationDate String?
  publisher String?
  binding Binding @default(Unknown)
  image Image? @relation(references: [id], fields: [imageId])
  imageId String?
  @@index([title])
}

model Author {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String
  books Book[]

  @@unique([name])
}

model Image {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  url String
  width Int
  height Int
  books Book[]

  @@unique([url])
}
